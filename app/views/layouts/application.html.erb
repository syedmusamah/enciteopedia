<tr>
	
	<td id="Home"> 
	<%= link_to 'Home', :controller=>:home, :action => :index%>


	</td>

	<td id="Articles"> 
	<%= link_to 'Articles', :controller=>:articles, :action => :index%>


	</td>

	<td id="Policy">

	<%= link_to 'Policy Page', :controller=>:misc, :action => :policy%>

	
	</td>	
	
	<td id="Community">
	<%= link_to 'Community Page', :controller=>:misc, :action => :community%>
	</td>
		
</tr>
</table>
