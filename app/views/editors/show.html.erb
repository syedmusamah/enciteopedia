<!DOCTYPE html>
<html>
<head>
  <title>EnCITEopedia</title>
<%= stylesheet_link_tag '/stylesheets/depot.css', :media => :screen %>
<%= stylesheet_link_tag    'scaffold', :media => :screen %> 
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tags %>
</head>
<body>

<p>
  <b>Name:</b>
  <%= @editor.name %>
</p>

<p>
  <b>Email:</b>
  <%= @editor.email %>
</p>


<table>
  <tr>
   <th>aName</th>
    <th>Category</th>
    <th>hits</th>

    
    <th></th>
    <th></th>
  </tr>

<h1> Edits by <%=@editor.name%> <h1>

<% @aarticles.each do |article| %>
  <tr>
    <td><%= article.aName %></td>
     <td><%= article.Category %></td>
    <td><%= article.hits %></td>
    <td><%= link_to 'Show', article %></td>
    
	
<% if session[:remember_token] != nil%> 
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
<% if session[:editor_id] == 11 %>
    <td><%= button_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %></td>
<%end%>
  <%end%>  
  </tr>
<% end %>
</table>

<% if session[:editor_id] == 11 %>
<%= link_to 'Edit', edit_editor_path(@editor) %> |
<% end %>
<%= link_to 'Back', editors_path %>

</body>
</html>
